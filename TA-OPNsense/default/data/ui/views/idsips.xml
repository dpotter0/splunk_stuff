<form>
  <label>IDS/IPS</label>
  <fieldset submitButton="true" autoRun="true">
    <input type="multiselect" token="priority">
      <label>priority</label>
      <initialValue>1,3,2</initialValue>
      <valuePrefix>priority="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <fieldForLabel>priority</fieldForLabel>
      <fieldForValue>priority</fieldForValue>
      <search>
        <query>index=opnsense sourcetype=opnsense:suricata |stats values(priority) as priority |mvexpand priority</query>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="text" token="filter" searchWhenChanged="true">
      <label>filter</label>
      <default>src_ip!=192.168.1.5 AND src_ip!=fe80::20c:29ff:fef4:c609/64</default>
      <initialValue>src_ip!=192.168.1.5 AND src_ip!=fe80::20c:29ff:fef4:c609/64</initialValue>
    </input>
    <input type="time" token="field2">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>index=opnsense sourcetype=opnsense:suricata $priority$ $filter$ |stats count by  name,classification,id,priority</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
